  
<% for blog in @blogs %>  
  <div>  
    <h2><%= link_to blog.name, root_url(:subdomain => blog.subdomain) %></h2>  
    <div class="actions">  
      <%= link_to "Edit", edit_blog_path(blog) %> |   
      <%= link_to "Destroy", blog, :confirm => 'Are you sure?', :method => :delete %>  
    </div>  
<% end %>  